<div class="extra-margin">
  <div class="authform rounded-0">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => ' rounded-0', :html => { :role => 'form'}) do |f| %>
      <h3 class="cred-heading">Sign up</h3>
      <%= render 'layouts/error_messages', object: resource %>
      <div class="form-group">

        <%= f.text_field :name, :autofocus => true, class: 'form-control ', placeholder: "Fullname" %>
      </div>
      <div class="form-group">

        <%= f.email_field :email, class: 'form-control ', placeholder: "email" %>
      </div>
      <div class="form-group">

        <%= f.password_field :password, class: 'form-control ', placeholder: "password" %>
      </div>
      <div class="form-group">

        <%= f.password_field :password_confirmation, class: 'form-control ', placeholder: "password confirmation" %>
      </div>
       <%= f.submit 'Sign up', :class => ' button ' %>
    <% end %>
  </div>
</div>
