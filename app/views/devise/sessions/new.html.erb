<div class="extra-margin">
  <div class="authform login">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <h3 class="cred-heading login-head text-center"><span class=""><i class="ion-person"></i></span></h3>
      <%= render 'layouts/error_messages', object: resource %>
        <div class="form-group">
        <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "email" %>
      </div>
      <div class="form-group">
        <div class='row'>
          <div class="col-sm-6">
          <%- if devise_mapping.registerable? %>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'pull-left '  %>
         <% end -%>
         </div>
            <div class="col-sm-6">
           <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
        <% end -%>
         </div>
        </div>
        <%= f.password_field :password, class: 'form-control ', placeholder: "password" %>
      </div>




            <div class="checkbox " style="width:150px">
            <label>
              <%= f.check_box :remember_me %> Remember me
            </label>



      </div>
      <div class="form-group">


       <%= f.submit 'Log in', :class => 'button btn-success ' %>
       </div>
    <% end %>
  </div>
</div>
