<div class="content">
                <div class="container-extra-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header unique-color-dark" >
                                    <h4 class="title">All Action Steps Data</h4>
                                    <p class="category">Here it is easy to view action</p><span> <strong><%= link_to 'New Action Step', new_todo_path %></strong> </span>
                                </div>
                                <div class="card-content table-responsive">
                                    <table class="table">

                                  <thead>
                                    <tr>
                                      <th>Title</th>
                                      <th>Description</th>
                                      <th>Finished</th>
                                      <th>User</th>
                                      <th>References</th>
                                      <th colspan="3"></th>
                                    </tr>
                                  </thead>

                                  <tbody>
                                    <% @todos.each do |todo| %>
                                      <tr>
                                        <td><%= todo.title %></td>
                                        <td><%= todo.description %></td>
                                        <td><%= todo.finished %></td>
                                        <td><%= todo.user %></td>
                                        <td><%= todo.references %></td>
                                        <td><%= link_to 'Show', todo %></td>
                                        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
                                        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                      </tr>
                                    <% end %>
                                  </tbody>
                                </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
